<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:background="@null"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <RelativeLayout
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:layout_weight="0.25"
    android:background="#00804d">
    <ImageView
      android:id="@+id/app_icon"
      android:layout_width="@dimen/topvpn_icon_size"
      android:layout_height="@dimen/topvpn_icon_size"
      android:background="@null"
      android:layout_marginBottom="5dp"
      android:layout_centerHorizontal="true"/>
    <TextView
      android:id="@+id/app_name"
      android:layout_below="@+id/app_icon"
      android:text="@string/topvpn_app_name_placeholder"
      android:textSize="@dimen/topvpn_app_name_size"
      android:gravity="center"
      android:background="@null"
      android:textStyle="bold"
      android:textColor="@android:color/white"
      android:layout_centerHorizontal="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:layout_below="@+id/app_name"
      android:text="@string/topvpn_welcome_choose_your_usage_plan"
      android:background="@null"
      android:textColor="@android:color/white"
      android:textSize="@dimen/topvpn_welcome_size"
      android:gravity="center"
      android:layout_centerHorizontal="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </RelativeLayout>
  <RadioGroup
    android:id="@+id/radio_group"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:layout_weight="0.75"
    android:background="#00ad68">
    <TextView
      android:id="@+id/free_txt"
      android:background="@null"
      android:text="@string/topvpn_free"
      style="@style/topvpn_options_txt"/>
    <RelativeLayout
      android:layout_width="wrap_content"
      android:background="@null"
      android:layout_height="wrap_content">
      <ImageView
        android:src="@drawable/topvpn_info"
        android:id="@+id/peer_more"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@null"
        android:layout_toEndOf="@+id/free_desc_txt"
        android:layout_toRightOf="@+id/free_desc_txt"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>
      <TextView
        android:id="@+id/free_desc_txt"
        android:textColor="@android:color/black"
        style="@style/topvpn_desc_txt"
        android:background="@null"
        android:text="@string/topvpn_use_app_name_and_be_a_peer"
        android:gravity="bottom|center"
        android:layout_height="@dimen/topvpn_peer_text_h"/>
      </RelativeLayout>
    <RadioButton
      android:id="@+id/free_radio"
      android:buttonTint="#fff"
      android:layout_gravity="center"
      android:background="@null"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/ads_txt"
      android:text="@string/topvpn_advertisement"
      android:background="@null"
      android:layout_marginTop="@dimen/topvpn_options_space"
      android:gravity="center"
      style="@style/topvpn_options_txt"/>
    <TextView
      android:id="@+id/ads_desc_txt"
      android:background="@null"
      android:text="@string/topvpn_use_app_name_with_some_advertisements"
      style="@style/topvpn_desc_txt"/>
    <RadioButton
      android:id="@+id/ads_radio"
      android:layout_gravity="center"
      android:background="@null"
      android:buttonTint="#fff"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/sub_txt"
      android:background="@null"
      android:layout_marginTop="15dp"
      android:text="@string/topvpn_subscription"
      style="@style/topvpn_options_txt"/>
    <TextView
      android:id="@+id/sub_desc_txt"
      android:text="@string/topvpn_use_app_name_for_subscription"
      android:background="@null"
      style="@style/topvpn_desc_txt"/>
    <RadioButton
      android:id="@+id/sub_radio"
      android:buttonTint="#fff"
      android:layout_gravity="center"
      android:background="@null"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <Button
      android:id="@+id/got_it_btn"
      android:layout_marginTop="@dimen/topvpn_got_it_margin_top"
      android:layout_width="180dp"
      android:backgroundTint="#fff"
      android:textColor="#4d4d4d"
      android:layout_height="56dp"
      android:text="@string/topvpn_start"
      android:gravity="center"
      android:textSize="18sp"
      android:textStyle="bold"
      android:fontFamily="sans-serif"
      android:drawableEnd="@drawable/topvpn_go_dark"
      android:drawableRight="@drawable/topvpn_go_dark"
      android:paddingLeft="45dp"
      android:paddingRight="45dp"/>
  </RadioGroup>
</LinearLayout>
