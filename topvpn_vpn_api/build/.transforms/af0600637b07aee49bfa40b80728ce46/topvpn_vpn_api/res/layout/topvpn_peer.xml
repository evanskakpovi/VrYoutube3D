<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:background="@null"
  android:layout_height="match_parent">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"
    android:clipChildren="false">
    <RelativeLayout
      android:id="@+id/top"
      android:layout_weight=".7"
      android:layout_width="match_parent"
      android:gravity="center_horizontal"
      android:clipChildren="false"
      android:background="@color/topvpn_colorPrimaryDark"
      android:layout_height="0dp">
      <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:background="@null"
        android:textColor="#fff"
        style="@style/topvpn_text"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
      <TextView
        android:id="@+id/app_name"
        android:text="@string/topvpn_app_name_placeholder"
        android:textSize="@dimen/topvpn_app_name_size"
        android:gravity="center"
        android:layout_below="@+id/welcome"
        android:background="@null"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <ImageView
        android:id="@+id/app_icon"
        android:layout_below="@+id/app_name"
        android:layout_width="@dimen/topvpn_icon_size"
        android:layout_height="@dimen/topvpn_icon_size"
        android:background="@null"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
      android:id="@+id/radio_group"
      android:layout_weight="1.2"
      android:layout_width="match_parent"
      android:background="#003d5b"
      android:layout_height="0dp">
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/got_it_btn"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <TextView
          android:id="@+id/peer_txt"
          style="@style/topvpn_welcome_text"
          android:padding="5dp"
          android:paddingTop="0dp"
          android:textColor="#fff"
          android:layout_width="wrap_content"
          android:background="@null"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="@string/topvpn_peer_msg"
          android:layout_centerHorizontal="true"/>
        <TextView
          android:id="@+id/more_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:background="@null"
          android:text="[Link to TOS]"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:padding="7dp"
          android:textColor="#009cd7"
          android:layout_below="@id/peer_txt"
          android:layout_centerHorizontal="true"/>
      </RelativeLayout>
      <Button
        android:id="@+id/got_it_btn"
        android:layout_marginTop="@dimen/topvpn_got_it_margin_top"
        android:layout_width="180dp"
        android:backgroundTint="#fff"
        android:textColor="#4d4d4d"
        android:layout_height="56dp"
        android:text="@string/topvpn_i_got_it"
        android:gravity="center"
        android:background="@null"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:fontFamily="sans-serif"/>
    </RelativeLayout>
  </LinearLayout>
  <FrameLayout
    android:id="@+id/more_popover"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:layout_centerInParent="true">
    <TextView
      android:id="@+id/more_popover_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@null"
      android:textColor="#000"
      android:text="@string/topvpn_read_more_msg"/>
  </FrameLayout>
</RelativeLayout>
