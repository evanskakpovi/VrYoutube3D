<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pare">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/image"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="matrix"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cf"
        android:paddingTop="5dp"
        android:baselineAligned="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/playlist"
        android:layout_alignEnd="@+id/playlist"
        android:layout_alignBottom="@+id/playlist"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text to test is to see today now"
            android:id="@+id/title"
            android:ellipsize="end"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text to describe all content to men eccentric"
            android:id="@+id/channel"
            android:gravity="center_vertical"
            android:textColor="#bb000000"
            android:textSize="11sp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/date"
            android:gravity="center_vertical"
            android:textColor="#bb000000"
            android:textSize="11sp"
            android:textIsSelectable="false"
            android:text="dates" />

    </LinearLayout>

    <ImageView

        android:id="@+id/playlist"
        android:src="@drawable/iconvr"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_alignBottom="@+id/image"
        app:srcCompat="@drawable/iconvr"
        android:scaleType="fitXY"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:contentDescription="view in 3d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/duration"
android:text="0000"
        android:background="#55000000"
        android:textColor="#fff"
        android:textSize="13dp"

        android:layout_alignBaseline="@id/imageView"
        android:layout_alignEnd="@+id/image"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>