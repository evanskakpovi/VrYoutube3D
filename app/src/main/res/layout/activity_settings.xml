                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:visibility="visible" />

                <RadioButton
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:id="@+id/radioButton9"
                    android:checked="false"
                    android:text="@string/orangef"
                    android:button="@drawable/selectordperm"
                    android:background="@drawable/bordoorange"

                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff6600"
                    android:visibility="visible" />

                <RadioButton
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:id="@+id/radioButton8"
                    android:checked="false"
                    android:text="@string/yellowf"
                    android:button="@drawable/selectordperm"
                    android:background="@drawable/bordoyellow"

                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffcc00"
                    android:visibility="visible" />

                <RadioButton
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:id="@+id/radioButton"
                android:checked="false"
                android:text="@string/greenf"
                android:button="@drawable/selectordperm"
                android:background="@drawable/bordo"

                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#00ff00"
                    android:visibility="visible" />

                <RadioButton
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:id="@+id/radioButton10"
                    android:checked="false"
                    android:text="@string/purplef"
                    android:button="@drawable/selectordperm"
